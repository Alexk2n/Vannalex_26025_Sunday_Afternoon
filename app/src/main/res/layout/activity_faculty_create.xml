<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Faculty"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtFacultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty Name" />

        <EditText
            android:id="@+id/edtDeanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dean Name"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnSaveFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnGoToList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Faculty List"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
